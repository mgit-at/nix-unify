module shareNftables || return

proc describe(; ; cfg) {
  d_t "share nftables"
  d_e (cfg)
}

proc hook_files(; ; ctx, cfg) {
  if (cfg.enable) {
    for f in /etc/systemd/network /etc/systemd/networkd.conf {
      if test -e "$f" {
        if test -L "$f" {
          mv -v "$f" "$f.nix-unify"
        }
      }
    }
  }
}
